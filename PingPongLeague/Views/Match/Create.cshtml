@model PingPongLeague.ViewModels.MatchCreateModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>MatchCreateModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.MatchDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.MatchDate, "{0:d/M/yyyy}", new { id = "datepicker" })
                @Html.ValidationMessageFor(model => model.MatchDate, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-10">

                @Html.DropDownListFor(
                    x => x.Winner.PlayerID,
                    new SelectList(Model.Players, "PlayerID", "FullName", Model.Winner),
                    "-- Select --"
               )
                @Html.ValidationMessageFor(x => x.Winner)

                beat

                @Html.DropDownListFor(
                    x => x.Loser.PlayerID,
                    new SelectList(Model.Players, "PlayerID", "FullName", Model.Loser),
                    "-- Select --"
               )
                @Html.ValidationMessageFor(x => x.Loser)

                </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

